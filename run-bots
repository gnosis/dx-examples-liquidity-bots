#!/usr/bin/env bash

# Config
MARKETS=WETH-RDN
WETH_TOKEN_ADDRESS=0xc58b96a0278bd2c77bc93e01b148282fb8e753a5
ETHEREUM_RPC_URL=https://rinkeby.infura.io

echo
echo "  *********  DutchX Bots - $DX_SERVICE_VERSION  *********"
